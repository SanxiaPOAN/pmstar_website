<html>
	<head>
        <%- include('head'); %>
	</head>
	<body class="is-preload">
		<!-- Page Wrapper -->
        <div id="page-wrapper">
            <!-- Header -->
            <%- include('header'); %>

            <!-- Main -->
            <article id="main">
                <header>
                    <h2>最新消息</h2>
                </header>

                <section class="wrapper style5">
                    <div class="inner">
                        <% if (announce.length == 0) { %>
                        <h3>現在還沒有公告!</h3>
                        <% } else { %>
                        <% announce.forEach(function(ann,i){ %>
                        <article>
                            <h3><a href="/detail?id=<%= ann._id %>"><%= ann.title %></a></h3>
                            <p><%= moment(ann.date).format('YYYY-MM-DD'); %></p>
                        <%- ann.content %>
                        <% if(ann.attachment){ %>
                            <p>附件檔案：<a href="/upload/<%= announce.attachment %>"><%= ann.attachmentName %></a></p>
                        </article>
                        <% } %>
                        <% if (announce.length-1 != i) { %>
                        <hr>
                        <% } %>
                        <% }); } %>
                    </div>
                </section>
            </article>

            <!-- Footer -->
            <%- include('footer'); %>
        </div>

		<!-- Scripts -->
        <script src="assets/js/jquery.min.js"></script>
        <script src="assets/js/jquery.scrollex.min.js"></script>
        <script src="assets/js/jquery.scrolly.min.js"></script>
        <script src="assets/js/browser.min.js"></script>
        <script src="assets/js/breakpoints.min.js"></script>
        <script src="assets/js/util.js"></script>
        <script src="assets/js/main.js"></script>
	</body>
</html>